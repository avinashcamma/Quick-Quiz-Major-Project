<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_eng_practice_sub_section"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_margin="@dimen/cv_horizontal_margin"
    android:elevation="@dimen/cardview_elevation"
    app:cardCornerRadius="@dimen/cardview_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_eng_sub_section_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/oval_form_app"/>

        <TextView
            android:id="@+id/tv_eng_sub_section_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_eng_sub_section_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:text="@string/synonyms_antonynms"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/navy_eng_practice_blue_txt"
            android:textStyle="bold"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>